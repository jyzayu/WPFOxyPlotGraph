<Page x:Class="WpfOxyPlotGraph.Views.PatientsListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WpfOxyPlotGraph.Views"
      mc:Ignorable="d"
      Title="PatientsListView">
  <Page.Resources>
    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="Margin" Value="5"/>
    </Style>
  </Page.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="2*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Text="환자 목록" FontSize="28" Margin="10,10,10,0"/>

    <DataGrid Grid.Row="1"
              ItemsSource="{Binding Patients}"
              SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              Margin="10"
              HeadersVisibility="Column"
              RowHeaderWidth="0">
      <DataGrid.Columns>
        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
        <DataGridTextColumn Header="이름" Binding="{Binding Name}" Width="*"/>
        <DataGridTextColumn Header="주민등록번호" Binding="{Binding ResidentRegistrationNumber}" Width="220"/>
        <DataGridTextColumn Header="주소" Binding="{Binding Address}" Width="2*"/>
        <DataGridTextColumn Header="연락처" Binding="{Binding Contact}" Width="180"/>
        <DataGridTemplateColumn Header="수정" Width="100">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Button Content="수정" Click="OnEditRowClick"/>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>

    <TextBlock Grid.Row="2" Text="진료 기록" FontSize="24" Margin="10,0,10,0"/>

    <DataGrid Grid.Row="3"
              ItemsSource="{Binding Visits}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              Margin="10"
              HeadersVisibility="Column"
              RowHeaderWidth="0">
      <DataGrid.Columns>
        <DataGridTextColumn Header="방문일자" Binding="{Binding VisitDate, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="200"/>
        <DataGridTextColumn Header="담당의사" Binding="{Binding DoctorName}" Width="160"/>
        <DataGridTextColumn Header="진단" Binding="{Binding Diagnosis}" Width="2*"/>
        <DataGridTextColumn Header="처치" Binding="{Binding Treatment}" Width="2*"/>
        <DataGridTextColumn Header="메모" Binding="{Binding Notes}" Width="2*"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</Page>

