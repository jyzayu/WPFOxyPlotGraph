<Window x:Class="WpfOxyPlotGraph.Views.EditPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="환자 정보 수정"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
  <Window.Resources>
    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}"/>
  </Window.Resources>
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Text="환자 정보 수정" FontSize="28" Margin="10,10,10,20"/>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <Label Grid.Row="0" Grid.Column="0" Content="이름"/>
      <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

      <Label Grid.Row="1" Grid.Column="0" Content="주민등록번호"/>
      <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ResidentRegistrationNumber, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

      <Label Grid.Row="2" Grid.Column="0" Content="주소"/>
      <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

      <Label Grid.Row="3" Grid.Column="0" Content="연락처"/>
      <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Contact, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

      <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
        <Button Content="취소" Click="OnCancelClick" />
        <Button Content="저장" Click="OnSaveClick" Margin="10,0,0,0"/>
      </StackPanel>
    </Grid>
  </Grid>
</Window>


