<Window x:Class="WpfOxyPlotGraph.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOxyPlotGraph.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Margin="8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="Home" Command="{Binding NavigateToDashboardCommand}" Margin="0,0,8,0" />
                <Button Content="신규 환자 등록" Command="{Binding InputScoreCommand}" IsEnabled="{Binding CanRegisterPatient}" />
                <Button Content="환자 관리" Command="{Binding ViewStudentsCommand}" Margin="8,0,0,0" IsEnabled="{Binding CanViewPatients}" />
                <Button Content="예약 관리" Command="{Binding ManageAppointmentsCommand}" Margin="8,0,0,0" IsEnabled="{Binding CanManageAppointments}" />
                <Button Content="의사 일정" Command="{Binding ViewDoctorScheduleCommand}" Margin="8,0,0,0" IsEnabled="{Binding CanViewDoctorSchedule}" />
                <Button Content="처방 등록" Command="{Binding ManagePrescriptionsCommand}" Margin="8,0,0,0" IsEnabled="{Binding CanManagePrescriptions}" />
                <Button Content="진료기록 관리" Command="{Binding ManageEncountersCommand}" Margin="8,0,0,0" IsEnabled="{Binding CanManagePrescriptions}" />
                <Button Content="감사 로그" Command="{Binding ViewAuditLogCommand}" Margin="8,0,0,0" IsEnabled="{Binding CanViewAudit}" />
                <Button Content="설정" Command="{Binding OpenSettingsCommand}" Margin="8,0,0,0" IsEnabled="{Binding CanOpenSettings}" />
                <Button Content="백업/복원" Command="{Binding OpenBackupCommand}" Margin="8,0,0,0" IsEnabled="{Binding CanOpenBackup}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <TextBlock Text="{Binding CurrentUserDisplay}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Button Content="로그인" Command="{Binding LoginCommand}" />
                <Button Content="로그아웃" Command="{Binding LogoutCommand}" Margin="8,0,0,0"/>
            </StackPanel>
        </DockPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
