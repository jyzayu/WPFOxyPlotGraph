<Window x:Class="WpfOxyPlotGraph.Views.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="인쇄 미리보기" Height="800" Width="1000">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
      <Button x:Name="BtnPrint" Content="인쇄" Click="BtnPrint_Click" Margin="0,0,8,0"/>
      <Button Content="닫기" Click="BtnClose_Click"/>
    </DockPanel>

    <FlowDocumentScrollViewer x:Name="Viewer" Grid.Row="1" Margin="8"/>

    <StatusBar Grid.Row="2">
      <StatusBarItem>
        <TextBlock x:Name="StatusText" />
      </StatusBarItem>
    </StatusBar>
  </Grid>
</Window>


