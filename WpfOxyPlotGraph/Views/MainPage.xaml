<Page x:Class="WpfOxyPlotGraph.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WpfOxyPlotGraph.Views" 
      xmlns:oxy="http://oxyplot.org/wpf"
      mc:Ignorable="d"
      Title="MainPage" Height="450" Width="800">

    <Page.Resources>
        <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource BaseStyle}"/>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 그래프 표시 영역 -->
        <oxy:PlotView Model="{Binding PlotModel}" Grid.Row="0"/>
        <Border Grid.Row="1" Background="LightGray" Padding="10">
            <!-- 컨트롤 영역 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <ComboBox Name="cmbSubject" SelectedIndex="0" Width="150">
                    <ComboBoxItem Content="국어"/>
                    <ComboBoxItem Content="수학"/>
                    <ComboBoxItem Content="영어"/>
                </ComboBox>

                <Button Content="조회" 
                    Command="{Binding LoadOxyPlotCommand}"
                    CommandParameter="{Binding ElementName=cmbSubject, Path=SelectedItem.Content}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>