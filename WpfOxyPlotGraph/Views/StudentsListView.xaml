<Page x:Class="WpfOxyPlotGraph.Views.StudentsListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WpfOxyPlotGraph.Views"
      mc:Ignorable="d"
      Title="StudentsListView">
  <Page.Resources>
    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="Margin" Value="5"/>
    </Style>
  </Page.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="2*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Text="학생 목록" FontSize="28" Margin="10,10,10,0"/>

    <DataGrid Grid.Row="1"
              ItemsSource="{Binding Students}"
              SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              Margin="10"
              HeadersVisibility="Column"
              RowHeaderWidth="0">
      <DataGrid.Columns>
        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
        <DataGridTextColumn Header="이름" Binding="{Binding Name}" Width="*"/>
      </DataGrid.Columns>
    </DataGrid>

    <TextBlock Grid.Row="2" Text="선택한 학생의 성적 내역" FontSize="24" Margin="10,0,10,0"/>

    <DataGrid Grid.Row="3"
              ItemsSource="{Binding Scores}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="False"
              Margin="10"
              HeadersVisibility="Column"
              RowHeaderWidth="0">
      <DataGrid.Columns>
        <DataGridTextColumn Header="일자" Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}" Width="160"/>
        <DataGridTextColumn Header="국어" Binding="{Binding KorScore}" Width="*"/>
        <DataGridTextColumn Header="수학" Binding="{Binding MathScore}" Width="*"/>
        <DataGridTextColumn Header="영어" Binding="{Binding EngScore}" Width="*"/>
        <DataGridTemplateColumn Header="작업" Width="140">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="삭제"
                        Command="{Binding DataContext.DeleteScoreCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        CommandParameter="{Binding}" Margin="5,0,0,0"/>
              </StackPanel>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</Page>


