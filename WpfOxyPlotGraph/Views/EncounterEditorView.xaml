<Page x:Class="WpfOxyPlotGraph.Views.EncounterEditorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="EncounterEditorView">
  <Page.Resources>
    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="Margin" Value="6"/>
    </Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource BaseStyle}"/>
  </Page.Resources>

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="2*"/>
    </Grid.RowDefinitions>

    <!-- Patient selector -->
    <DockPanel Grid.Row="0">
      <Label Content="환자 선택" />
      <ComboBox Width="320"
                ItemsSource="{Binding Patients}"
                SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"
                DisplayMemberPath="Name"
                Margin="8,0,0,0"/>
      <TextBlock Text="{Binding SelectedPatient.Id}" VerticalAlignment="Center" Margin="8,0,0,0"/>
    </DockPanel>

    <!-- Encounters and editor -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>

      <!-- Encounter list -->
      <DataGrid Grid.Column="0"
                ItemsSource="{Binding Encounters}"
                SelectedItem="{Binding SelectedEncounter, Mode=TwoWay}"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True"
                HeadersVisibility="Column"
                RowHeaderWidth="0"
                Margin="0,0,8,0">
        <DataGrid.Columns>
          <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
          <DataGridTextColumn Header="내원일시" Binding="{Binding VisitAt, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="180"/>
          <DataGridTextColumn Header="진단" Binding="{Binding Diagnosis}" Width="*"/>
        </DataGrid.Columns>
      </DataGrid>

      <!-- Editor -->
      <StackPanel Grid.Column="1">
        <StackPanel Orientation="Horizontal">
          <Label Content="내원일시"/>
          <DatePicker SelectedDate="{Binding SelectedEncounter.VisitAt, Mode=TwoWay}" Width="180"/>
          <TextBox Width="120" Margin="8,0,0,0"
                   ToolTip="HH:mm"
                   Text="{Binding SelectedEncounter.VisitAt, Mode=TwoWay, StringFormat=HH:mm}"/>
        </StackPanel>
        <Label Content="진단"/>
        <TextBox Text="{Binding SelectedEncounter.Diagnosis, Mode=TwoWay}" AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>
        <Label Content="메모/요약(템플릿 적용 가능)"/>
        <TextBox Text="{Binding SelectedEncounter.Notes, Mode=TwoWay}" AcceptsReturn="True" Height="120" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
          <Button Content="신규" Command="{Binding NewEncounterCommand}"/>
          <Button Content="템플릿 적용" Command="{Binding ApplySummaryTemplateCommand}" Margin="8,0,0,0"/>
          <Button Content="저장" Command="{Binding SaveEncounterCommand}" Margin="8,0,0,0"/>
        </StackPanel>
      </StackPanel>
    </Grid>

    <!-- Attachments -->
    <GroupBox Grid.Row="2" Header="첨부 파일">
      <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
          <Button Content="추가" Click="OnAddAttachmentClick"/>
          <Button Content="열기" Click="OnOpenAttachmentClick" Margin="8,0,0,0"/>
          <Button Content="삭제" Click="OnDeleteAttachmentClick" Margin="8,0,0,0"/>
        </StackPanel>
      </DockPanel>
    </GroupBox>

    <Grid Grid.Row="3">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>
      <!-- Attachment list -->
      <DataGrid Grid.Column="0"
                ItemsSource="{Binding CurrentAttachments}"
                x:Name="AttachmentsGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True"
                HeadersVisibility="Column"
                RowHeaderWidth="0"
                Margin="0,0,8,0"
                SelectionMode="Single">
        <DataGrid.Columns>
          <DataGridTextColumn Header="이름" Binding="{Binding OriginalFileName}" Width="2*"/>
          <DataGridTextColumn Header="형식" Binding="{Binding ContentType}" Width="*"/>
          <DataGridTextColumn Header="크기(바이트)" Binding="{Binding FileSizeBytes}" Width="*"/>
          <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
        </DataGrid.Columns>
      </DataGrid>

      <!-- Audit + Print -->
      <StackPanel Grid.Column="1">
        <GroupBox Header="개정 이력(감사 로그)">
          <DataGrid ItemsSource="{Binding EncounterHistory}"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    HeadersVisibility="Column"
                    RowHeaderWidth="0">
            <DataGrid.Columns>
              <DataGridTextColumn Header="시각" Binding="{Binding ChangedAt, StringFormat=\{0:yyyy-MM-dd HH:mm:ss\}}" Width="180"/>
              <DataGridTextColumn Header="작업" Binding="{Binding Operation}" Width="80"/>
              <DataGridTextColumn Header="이전" Binding="{Binding OldValues}" Width="*"/>
              <DataGridTextColumn Header="이후" Binding="{Binding NewValues}" Width="*"/>
            </DataGrid.Columns>
          </DataGrid>
        </GroupBox>
        <GroupBox Header="인쇄/문서화" Margin="0,8,0,0">
          <StackPanel Orientation="Horizontal">
            <Button Content="진료 요약" Command="{Binding PrintSummaryCommand}"/>
            <Button Content="처방전" Command="{Binding PrintPrescriptionCommand}" Margin="8,0,0,0"/>
            <Button Content="검사의뢰서" Command="{Binding PrintLabOrderCommand}" Margin="8,0,0,0"/>
          </StackPanel>
        </GroupBox>
      </StackPanel>
    </Grid>
  </Grid>
</Page>


