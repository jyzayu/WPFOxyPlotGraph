<Page x:Class="WpfOxyPlotGraph.Views.AppointmentsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WpfOxyPlotGraph.Views"
      mc:Ignorable="d"
      Title="AppointmentsView">
  <Page.Resources>
    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource BaseStyle}"/>
  </Page.Resources>

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Text="진료 예약 관리" FontSize="28" Margin="10,10,10,10"/>

    <!-- Scrollable content area -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Patient selector -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
          <Label Content="환자 선택"/>
          <ComboBox Width="280"
                    ItemsSource="{Binding Patients}"
                    SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"
                    DisplayMemberPath="Name"/>
        </StackPanel>

        <!-- Appointments grid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Appointments}"
                  SelectedItem="{Binding SelectedAppointment, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0">
          <DataGrid.Columns>
            <DataGridTextColumn Header="일시" Binding="{Binding AppointmentDate, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="220"/>
            <DataGridTextColumn Header="담당의사" Binding="{Binding DoctorName}" Width="160"/>
            <DataGridTextColumn Header="사유" Binding="{Binding Reason}" Width="2*"/>
            <DataGridTextColumn Header="상태" Binding="{Binding Status}" Width="140"/>
            <DataGridTextColumn Header="메모" Binding="{Binding Notes}" Width="2*"/>
          </DataGrid.Columns>
        </DataGrid>

        <!-- Form -->
        <Grid Grid.Row="2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <Label Grid.Row="0" Grid.Column="0" Content="예약일자"/>
          <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding SelectedDate, Mode=TwoWay}" />

          <Label Grid.Row="0" Grid.Column="2" Content="담당의사"/>
          <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding DoctorName, UpdateSourceTrigger=PropertyChanged}"/>

          <Label Grid.Row="1" Grid.Column="0" Content="예약시간"/>
          <ComboBox Grid.Row="1" Grid.Column="1"
                    
                    ItemsSource="{Binding AvailableTimeSlots}"
                    SelectedItem="{Binding SelectedTimeSlot, Mode=TwoWay}" />

          <Label Grid.Row="2" Grid.Column="0" Content="사유"/>
          <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Reason, UpdateSourceTrigger=PropertyChanged}"/>

          <Label Grid.Row="3" Grid.Column="0" Content="상태"/>
          <ComboBox Grid.Row="3" Grid.Column="1"
                    ItemsSource="{Binding AvailableStatuses}"
                    SelectedItem="{Binding Status, Mode=TwoWay}"/>

          <Label Grid.Row="3" Grid.Column="2" Content="메모"/>
          <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
      </Grid>
    </ScrollViewer>

    <!-- Sticky bottom action bar -->
    <Border Grid.Row="2" Background="#FFF" BorderThickness="1,1,1,0" BorderBrush="#DDD" Padding="10,8">
      <WrapPanel HorizontalAlignment="Right">
        <Button Content="신규 등록" Command="{Binding CreateCommand}"/>
        <Button Content="변경 저장" Command="{Binding UpdateCommand}" Margin="10,0,0,0"/>
        <Button Content="예약 취소" Command="{Binding CancelCommand}" Margin="10,0,0,0"/>
        <Button Content="초기화" Command="{Binding ClearCommand}" Margin="10,0,0,0"/>
      </WrapPanel>
    </Border>
  </Grid>
</Page>

